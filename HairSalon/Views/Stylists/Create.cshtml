@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add a new stylist</h1>

<div class="form-container">
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name) <br>
    @Html.TextBoxFor(model => model.Name) <br><br>

    @Html.LabelFor(model => model.Description) <br>
    @Html.TextBoxFor(model => model.Description) <br>

    <input type="submit" value="Add new Stylist" class="btn btn-secondary"/>
}
</div>

<p>@Html.ActionLink("Show all stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>